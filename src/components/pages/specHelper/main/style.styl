// Remove line from beneath grid cells
.table .v-input__slot::before
  display: none

// Remove line from beneath rows
.theme--light .v-table tbody tr:not(:last-child) 
  border-bottom: none

// Do not obscure text in cells
.v-textarea textarea
  padding: 0px

// Center number under heading
.node-order
  text-align: center

